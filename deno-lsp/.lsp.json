{
  "typescript": {
    "command": "deno",
    "args": [
      [
        "lsp"
      ]
    ],
    "extensionToLanguage": {
      ".ts": "typescript",
      ".tsx": "typescriptreact",
      ".js": "javascript",
      ".jsx": "javascriptreact",
      ".mts": "typescript",
      ".cts": "typescript",
      ".mjs": "javascript",
      ". cjs": "javascript"
    },
    "transport": "stdio",
    "initializationOptions": {
      "enable": true,
      "enablePaths": [
        "src",
        "tests",
        "fixtures"
      ],
      "lint": true,
      "unstable": false,
      "suggest": {
        "autoImports": true,
        "imports": {
          "autoDiscover": true
        }
      }
    },
    "maxRestarts": 3
  }
}
